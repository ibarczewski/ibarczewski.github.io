---
import { Content as BioContent } from '../content/resume/bio.md';
import { Content as ResumeContent } from '../content/resume/resume.md';
import '../../public/assets/css/style.css';
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="assets/images/mark.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Who is Ian Barczewski</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700;1,400;1,700&family=Inconsolata&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'"/>
		<noscript>
			<link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet" type="text/css"/>
		</noscript>
	</head>
	<body>
		<header class="b--header flow">
			<img src="assets/images/ian.jpg" />
			<h2>I am Ian Barczewski</h2>
			<BioContent />
			<a href="mailto:ibarczewski@gmail.com" class="button cta hidden-on-print">Contact me today!</a>
			<a href="assets/files/Ian_Barczewski_Resume.pdf" class="button cta hidden-on-print" data-variant="secondary">Download Resume PDF</a>
			<p class="hidden-on-screen">ibarczewski@gmail.com</p>
		</header>
		<main class="b--resume flow">
			<ResumeContent />
		</main>
		<footer class="b--footer flow hidden-on-print">
			<a href="mailto:ibarczewski@gmail.com" class="button cta hidden-on-print">Contact me today!</a>
			<p>Find me on <a href="https://www.linkedin.com/in/ibarczewski" id="footer--linkedin" class="footer--link">LinkedIn</a>.</p>
			<p>View the code for this résumé on <a href="https://github.com/ibarczewski/Resume" id="footer--github" class="footer--link">GitHub</a>.</p>
		</footer>
	</body>
</html>
